<div class="page_content" style="width: 800px; margin: 0 auto;">
	<h1 class="title">
		<%= @post.title %>
	</h1>
	<p class="date">
		Submitted<%= time_ago_in_words(@post.created_at) %>
		<% if user_signed_in? %> |
			<%= link_to "Edit", edit_post_path %> |
			<%= link_to "Delete", post_path(@post), method: :delete, data: { confirm: "Are you sure?" } %>
		<% end %>
	</p>
	<p class="body">
		<%= @post.body %>
	</p>
	<div class="comments">
		<h2><%= @post.comments.count %> comments</h2>
		<%= render @post.comments %>
        <% if user_signed_in? %>
			<h3>Join Discussions</h3>
			<%= render "comments/form" %>
		<% else %>
		    <h3><%= link_to "Sign Up To Join the Discussion", new_user_registration_path %></h3>
		<% end %>
		
	</div>
</div>